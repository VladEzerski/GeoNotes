<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/note_image"
        android:background="@drawable/shape_rectangle"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Text"
        android:id="@+id/note_body"
        android:textColor="#b42929"
        android:layout_alignTop="@+id/note_image"
        android:layout_alignLeft="@+id/note_image"
        android:layout_alignStart="@+id/note_image"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignRight="@+id/note_image"
        android:layout_alignEnd="@+id/note_image"
        android:maxLines="3"
        />

</RelativeLayout>